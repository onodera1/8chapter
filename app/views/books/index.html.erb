

<h1>Books</h1>

<table>
  <thead>

    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show",book_path(book) %>
        <%= link_to "Edit", edit_book_path(book) %>
        <%= link_to "Destory", book_path(book), method: :delete,  "data-confirm" => 'are you sure?' %>

        <!-- 詳細と編集と削除のリンクを作成する必要がある
         -->
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create book' %>
 
<% end %>





